{# Body #}

<body class="{{ page.header.body_classes }}">
<main>


    <div class="left">

        <div class="logo">
            {# Wordmark #}
            {# <a href="/">Zhero</a> #}
            <a href="/">{% include 'svgs/Zhero-Primary.svg' %}</a>
        </div>
        <div class="on-page-nav transition-fade">
            <ul>
                 {% block onpagenav %}{% endblock %}
            </ul>
        </div>

    </div>




    <div class="right">
        <nav>
        {# Links #}
           <div class="links-container">

                <div class="links" id="links">
                    {% set coll = page.collection({
                      items: '@root.pages',
                      order: { by: 'default', dir: 'asc' }
                    }) %}


                    {% for p in coll if p.route != '/' %}
                        {% set is_active = p.active or p.activeChild %}
                      <a class="{{ is_active ? 'active' : '' }}" href="{{ p.url|e }}">{{ p.menu|default(p.title)|e }}</a>
                    {% endfor %}
                    <a href="/search">{% include 'svgs/Search.svg' %}</a>
                </div>
            </div>
            <div class="mobile-container">
                <a class="message" id="mobile" onclick="navmob(this)" href="#">
                    {% include 'svgs/hamburger.html.twig' %}
                </a>
            </div>            
        </nav>

        {% block body %}
            <section id="swup" class="transition-fade">
                {% block content %}{% endblock %}
            </section>
        {% endblock %}


        
        {% block footer %}

        <section id="footer">
            <hr />
            <div class="footer-content">
                <div>Â© Zhero 2025</div>
                <div>Design: <a href="https://mjd.studio">MJD Studio</a></div>
            </div>

        </section>

        {# Custom Cursor  #}
        {# <img src="user/themes/michael-j-davies/images/icons/arrow.svg" id="plus" /> #}

        {% endblock %}
        
    </div>

    {# Mobile Navigation #}
    <section id="mobNav">
        <div class="moblinks">
            {% set coll = page.collection({
                      items: '@root.pages',
                      order: { by: 'default', dir: 'asc' }
                    }) %}


                    {% for p in coll %}
                        {% set is_active = p.active or p.activeChild %}
                      <a onclick="navmobClose(this)" class="{{ is_active ? 'active' : '' }}" href="{{ p.url|e }}">{{ p.menu|default(p.title)|e }}</a>
                    {% endfor %}
           {#  <a onclick="navmobClose(this)" href="/">Home</a>
            <a onclick="navmobClose(this)" href="/projects">Work</a>
            <a onclick="navmobClose(this)" href="/play">Play</a>
            <a onclick="navmobClose(this)" href="/about">About</a> #}
        </div>
    </section>
    
    <div id="overlay">
        
    </div>











</main>



